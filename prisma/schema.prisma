generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tasks {
  id String @id @default(uuid())
  title String
  description String?
  period Period
  status Status @default(NOT_STARTED)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum Period{
  MORNING
  AFTERNOON
  NIGHT
}

enum Status{
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}